<%= form_for @pin do |f| %>
  <%= f.label 'description' %>
  <%= f.text_field :description %>

  <%= f.label 'category' %>
  <%= f.select :category, ['bio waste', 'natural disaster', 'vandalism', 'trash', 'chemical spill'], {prompt: 'choose a category'} %>
  <%= f.hidden_field :lat, value: @pin.lat %>
  <%= f.hidden_field :lng, value: @pin.lng %>
  <%= f.hidden_field :user_id, value: current_user.id %> 

  <%= f.submit %>
<% end %>
